<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuani21.review.dao.UserDao">
	<insert id="insertUser" parameterType="com.zhuani21.review.bean.User">
		<selectKey keyProperty="id" order="AFTER" resultType="int">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO user(nickname,sex,birthday,address,email,mobile) VALUES
		(#{nickname},#{sex},#{birthday},#{address},#{email},#{mobile} )
	</insert>
	<select id="findUserViaId" parameterType="int" resultType="com.zhuani21.review.bean.User">
		select id,nickname,sex,birthday,address,email,mobile from user where id=#{id}
	</select>
</mapper>